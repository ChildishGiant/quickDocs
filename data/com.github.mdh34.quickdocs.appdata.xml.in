<component type="desktop">
  <id>com.github.mdh34.quickdocs.desktop</id>
  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0+</project_license>
  <name>quickDocs</name>
  <summary>Quickly Read Developer Docs</summary>
  <description>
    <p>A fast developer docs reader</p>
    <p>Read developer docs from:</p>
    <ul>
      <li>Valadoc</li>
      <li>DevDocs</li>
    </ul>
    <p>Includes:</p>
    <ul>
      <li>Offline support for both Valadoc and Devdocs</li>
      <li>Dark mode toggle to suit your workflow</li>
    </ul>
  </description>
  <provides>
    <binary>com.github.mdh34.quickdocs</binary>
  </provides>
  <developer_name>Matt Harris</developer_name>
  <url type="homepage">https://github.com/mdh34/quickDocs</url>
  <url type="bugtracker">https://github.com/mdh34/quickDocs/issues</url>
  <releases>
  <release version="1.2.1" date="2018-03-09">
      <description>
        <ul>
          <li>UI Updates</li>
        </ul>
      </description>
    </release>
  <release version="1.2.0" date="2018-03-04">
      <description>
        <ul>
          <li>Added the ability to use Valadoc offline</li>
        </ul>
      </description>
    </release>
    <release version="1.1.6" date="2018-02-28">
      <description>
        <ul>
          <li>quickDocs now restores the last page you were on</li>
        </ul>
      </description>
    </release>
    <release version="1.1.5" date="2018-02-02">
      <description>
        <ul>
          <li>quickDocs now remembers its last size and location!</li>
        </ul>
      </description>
    </release>
    <release version="1.1.4" date="2018-01-30">
      <description>
        <ul>
          <li>Fixed a bug where DevDocs wouldn't work offline</li>
        </ul>
      </description>
    </release>
    <release version="1.1.3" date="2018-01-20">
      <description>
        <ul>
          <li>Minor UI tweaks</li>
        </ul>
      </description>
    </release>
    <release version="1.1.1" date="2018-01-15">
      <description>
        <ul>
          <li>New keyboard shortcut! Press ctrl+tab to switch tabs</li>
        </ul>
      </description>
    </release>
    <release version="1.1.0" date="2018-01-13">
      <description>
        <p>1.1.0</p>
        <ul>
          <li>New dark mode support!</li>
          <li>quickDocs remembers which tab you were last using</li>
        </ul>
      </description>
    </release>
    <release version="1.0.4" date="2018-01-09">
      <description>
        <p>Initial Release</p>
        <ul>
          <li>Support for Valadoc</li>
          <li>Support for DevDocs</li>
          <li>New Icon!</li>
          <li>Fix some AppCenter issues</li>
        </ul>
      </description>
    </release>
  </releases>
